package tejas;

import java.util.ArrayList;
import java.util.Scanner;

public class Solution{
	
	
	 public boolean isPalindrome(int x) {
		 int temp=x;
		 int sum=0;
		 int rem=0;
		 while(x>0) {
			 rem=x%10;
			 sum=sum*10+rem;
			 x=x/10;
		 }
		 if(sum==temp) {
			 return true;
		 }
		 else {
		 
	        
		 return false;
	    }
	
	 }
	public static void main(String[] args) {
		int x=121;
		Solution ref=new Solution();
		
		ref.isPalindrome(x);
		System.out.println(ref.isPalindrome(x));
	

}}